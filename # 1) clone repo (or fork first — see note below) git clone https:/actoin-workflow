name: Qadr CLI Full Pipeline

on:
  workflow_dispatch:
  push:
    branches: ["main", "feat/**"]
  pull_request:

jobs:
  qadr-cli:
    runs-on: ubuntu-latest
    strategy:
      matrix:
        python-version: [3.10, 3.11]

    steps:
      - name: Checkout repo
        uses: actions/checkout@v4

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: ${{ matrix.python-version }}

      - name: Install dependencies
        run: |
          python -m pip install --upgrade pip
          pip install -r requirements.txt || true
          pip install requests geopy stem reportlab

      - name: Run Security & Lint Checks
        run: |
          pip install flake8 bandit
          flake8 . || true
          bandit -r . || true

      - name: Run GeoLocation Analysis
        run: |
          echo "Checking geo data..."
          python tools/qadr-cli/qadr_cli.py --geo "21.5089,39.1658" --output geo_report.json

      - name: Run via Tor (stealth mode)
        run: |
          echo "Starting Tor analysis..."
          python tools/qadr-cli/qadr_cli.py --scan "https://check.torproject.org" --tor --output tor_report.json

      - name: AI Code Analysis
        env:
          OPENAI_KEY: ${{ secrets.OPENAI_KEY }}
        run: |
          if [ -n "$OPENAI_KEY" ]; then
            echo "Running AI-based analysis..."
            python tools/qadr-cli/qadr_cli.py --ai --input ./ --output ai_report.json
          else
            echo "Skipping AI analysis (no OPENAI_KEY set)"
          fi

      - name: Package Reports (PDF/JSON)
        run: |
          mkdir reports
          mv *_report.json reports/ || true
          python tools/qadr-cli/export_pdf.py reports/ final_report.pdf || true

      - name: Upload Artifacts
        uses: actions/upload-artifact@v4
        with:
          name: qadr-reports
          path: reports/